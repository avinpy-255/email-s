FROM node:18-alpine

WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./
RUN npm install

# Copy the rest of the application
COPY . .

# Build the application (if using a build step)
RUN npm run build

# Expose the port the app runs on
EXPOSE 8080

# Command to run the application (adjust based on your frontend framework)
CMD ["npm", "run", "dev"]